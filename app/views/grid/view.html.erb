<!-- Get desired dimension for a new grid and submit it -->
<%= form_for :dimension, method: 'get', url: root_path do |f| %>

    <p>
    <%= f.label :X %><br>
    <%= f.number_field :dimensionx %>
    </p>
    <p>
    <%= f.label :Y %><br>
    <%= f.number_field :dimensiony %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>
<div id="grid">
  <% count = 0 %>
  <div class="column">
  <% Grid.all.each do |grid| %>
      <% if count >= grid.y %>
          </div><div class="column">
      <% end %>
      <% count = grid.y %>
      <% if grid.y%2.floor != 0 %>
          <div class="hexagon odd"></div>
      <% else %>
          <div class="hexagon even"></div>
      <% end %>
  <% end %>
  </div>
</div>